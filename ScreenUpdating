Public Enum TurnOnOFF
    TurnOn
    TurnOff
End Enum


Sub ToggleScreenUpdating(StateOnOff As TurnOnOff)

    With Application
        Select Case StateOnOff
            Case TurnOn
                .ScreenUpdating = True
                .Calculation = xlCalculationAutomatic
            Case TurnOff
                .ScreenUpdating = False
                .Calculation = xlCalculationManual
        End Select
    End With
    
End Sub
